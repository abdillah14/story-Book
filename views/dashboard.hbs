<h5>Dashboard</h5>
<h3>Welcome  {{ name }}</h3>
<p>Here are your Stories</p>

{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>tittle</th>
            <th>Date</th>
            <th>status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
<tr>
    <td><a href="/stories/{{_id}}"></a>{{tittle}}</td>
    <td>{{ formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
    <td><span class="dash-status">{{status}}</span></td>
    <td>
        <a href="/stories/edit/{{_id}}" class="btn btn-float">
        <i class="fas fa-edit"> </i></a>
    </td>
    <td>
        <form action="/stories/{{_id}}" method="post" id="delete-form">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn red">
            <i class="fas fa-trash"></i>
        </button>
        </form>
    </td>
</tr>
        {{/each}}
    </tbody>
</table>


{{else}}

<p>you haven't created any story</p>
{{/if}}



