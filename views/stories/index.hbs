<h1>Your Public Stories</h1>
<div class="row">
    {{#each stories}}
<div class="col s12 m4">
<div class="card">
    <div class="card-image">
        {{{editIcon user ../user _id}}}
    </div>
    <div class="card-content center-align">
        <h3>{{tittle}}</h3>
        <p>{{stripTags (truncate body 150) }}</p>
        <br>
        <div class="chip">
            <img src="{{user.image}}" alt="" >
            <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
        </div>
    </div>
    <div class="card-action center-align">
        <a href="/stories/{{_id}}" class="btn teal darken-4 pulse">Read more</a>
    </div>
</div>
</div>
    {{else}}
<p>No Stories To  Display ...</p>
    {{/each}}
</div>